# ==============================================
# CONFIGURATION SHIFA+ - ENVIRONNEMENT
# ==============================================
# Copier ce fichier en .env et modifier les valeurs

# ==============================================
# BASE DE DONNÉES POSTGRESQL
# ==============================================
DATABASE_URL="postgresql://shifa_user:shifa_secure_pass_2024@localhost:5432/shifa_db"
POSTGRES_PASSWORD="shifa_secure_pass_2024"
POSTGRES_PORT=5432

# ==============================================
# REDIS (Cache & Sessions)
# ==============================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="redis_secure_pass"
REDIS_PORT=6379

# ==============================================
# MINIO / S3 (Stockage de Documents)
# ==============================================
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin123"
S3_BUCKET="shifa-documents"
S3_REGION="us-east-1"

MINIO_ROOT_USER="minioadmin"
MINIO_ROOT_PASSWORD="minioadmin123"
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# ==============================================
# BACKEND API (NestJS)
# ==============================================
PORT=3001
API_PORT=3001
NODE_ENV="development"
FRONTEND_URL="http://localhost:3000"
SESSION_SECRET="votre_session_secret_tres_securise_changez_moi"

# ==============================================
# JWT (JSON Web Tokens)
# ==============================================
JWT_SECRET="votre_jwt_secret_tres_securise_minimum_32_caracteres_changez_moi"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="votre_refresh_token_secret_changez_moi"
JWT_REFRESH_EXPIRES_IN="30d"

# ==============================================
# FRONTEND (Next.js)
# ==============================================
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_WS_URL="ws://localhost:3001"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="votre_nextauth_secret_minimum_32_caracteres_changez_moi"

# ==============================================
# CHIFFREMENT (Documents Médicaux)
# ==============================================
ENCRYPTION_KEY="01234567890123456789012345678901"
ENCRYPTION_ALGORITHM="aes-256-gcm"

# ==============================================
# EMAIL (SMTP)
# ==============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="votre-email@gmail.com"
SMTP_PASSWORD="votre-mot-de-passe-app"
SMTP_FROM="noreply@shifa.ma"
SMTP_FROM_NAME="Shifa+"

# ==============================================
# MONITORING & SÉCURITÉ
# ==============================================
SENTRY_DSN=""
LOG_LEVEL="debug"
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
ENABLE_2FA=true

# Note: Copier ce fichier en .env et changer tous les secrets en production

